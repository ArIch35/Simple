<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_house_view_adapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#703737"
    android:orientation="vertical"
    tools:context=".HouseView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_toolbar_house_view_screen"
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_all_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#351233"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/back_arrow_all_screen"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:contentDescription="@string/desc"
            android:translationX="-20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.407"
            app:srcCompat="@drawable/arrowback_white_24dp" />

        <ImageView
            android:id="@+id/wish_star_house_view_screen"
            android:layout_width="34dp"
            android:layout_height="31dp"
            android:contentDescription="@string/desc"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_all_screen"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_all_screen"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.407"
            app:srcCompat="@drawable/star_unfilled" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/images_container_house_view_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_images_house_view_screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/image_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/image_count"
            android:layout_width="409dp"
            android:layout_height="53dp"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_arrow_holder"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:layout_marginBottom="56dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/image_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.957"
            app:layout_constraintStart_toEndOf="@+id/left_arrow_holder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"></LinearLayout>

        <LinearLayout
            android:id="@+id/left_arrow_holder"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:layout_marginBottom="56dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/image_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/container_info_house_view_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#603A5D"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/address_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/available_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/size_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/price_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/duration_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/utilities_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/furnished_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:id="@+id/desc_house_view_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_additional_house_view_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#603A5D">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chat_button_house_view_screen"
            android:layout_width="55dp"
            android:layout_height="54dp"
            android:clickable="true"
            android:contentDescription="@string/desc"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.939"
            app:srcCompat="@android:drawable/sym_action_chat" />

        <ImageView
            android:id="@+id/owner_image_house_view_screen"
            android:layout_width="97dp"
            android:layout_height="78dp"
            android:contentDescription="@string/desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.085"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/owner_email_house_view_screen"
            android:layout_width="228dp"
            android:layout_height="64dp"
            android:fontFamily="sans-serif-condensed-medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.699"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.117" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>